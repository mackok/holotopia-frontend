<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MoriBioActivity"
        android:background="@color/colorPrimary">
<androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MoriBioActivity"
        android:background="@color/colorPrimary"
        android:layout_marginStart="80dp"
        android:id="@+id/LinearMori">

    <ImageView
            android:layout_width="208dp"
            android:layout_height="423dp"
            app:srcCompat="@drawable/mori_portrait"
            android:id="@+id/imageView"
            android:contentDescription="@string/bio"/>

    <TextView
            android:text="Mori Calliope"
            android:layout_width="195dp"
            android:layout_height="23dp"
            android:id="@+id/textView"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textColor="@color/exo_white"/>

    <TextView
            android:text="@string/bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="20dp"
            android:textColor="@color/exo_white"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="285dp"
            android:layout_height="83dp"
            android:id="@+id/textView3"
            android:text="Mori Calliope is an English Virtual YouTuber associated with hololive, as part of its English (EN) branch first generation of Vtubers alongside Ninomae Ina'nis, Takanashi Kiara, Watson Amelia, and Gawr Gura."
            android:layout_marginTop="12dp"
            android:textColor="@color/exo_white"/>


</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>