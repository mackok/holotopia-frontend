<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimary">

    <TextView
            android:text="Holotopia Dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="30sp"
            android:textColor="@color/exo_white"
            android:fontFamily="@font/commando"
            android:layout_marginTop="20sp"
            android:layout_marginStart="50dp"
            />

    <ImageView
            android:layout_width="273dp"
            android:layout_height="278dp"
            app:srcCompat="@drawable/gura_av"
            android:id="@+id/imageView2"
            android:layout_marginStart="50dp"/>

    <Button
            android:text="@string/library_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/library_button"
            android:onClick="goToGallery"
            android:layout_marginStart="300px"
            />

    <Button
            android:text="@string/media_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MediaB"
            android:onClick="PlayMedia"
            android:layout_marginStart="300px"
            android:layout_marginTop="100px"
            />

</androidx.appcompat.widget.LinearLayoutCompat>